{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "checkJs": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@/components/*": ["components/*"],
            "@/models/*": ["models/*"]
        }
    },
    "include": ["**/*.js", "**/*.jsx"],
    "exclude": ["node_modules"]
}
